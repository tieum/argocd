{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^kustomization.yaml$"
      ],
      "matchStrings": [
        ".*\\/argoproj\\/argo-cd\\/(?<currentValue>v\\d+\\.\\d+\\.\\d+?)\\/.*",
        ".*app\\.kubernetes\\.io\\/version: (?<currentValue>v\\d+\\.\\d+\\.\\d+?)\\n"
      ],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "argoproj/argo-cd"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^patch/.+\\.yaml$"
      ],
      "matchStrings": [
        "image: (?<registry>.*)\\/(?<repo>.*)\\/(?<name>.*):(?<currentValue>.*)\\s+"
      ],
      "registryUrlTemplate": "https://{{registry}}",
      "depNameTemplate": "{{repo}}/{{name}}",
      "datasourceTemplate": "docker"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "custom.regex"
      ],
      "commitMessageTopic": "update",
      "branchTopic": "{{depNameSanitized}}-{{{newMajor}}}{{#if separateMinorPatch}}{{#if isPatch}}.{{{newMinor}}}{{/if}}{{/if}}.x",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackageNames": [
        "argoproj\\/*"
      ],
      "groupName": "argocd",
      "automerge": true
    }
  ],
  "automergeType": "pr",
  "ignoreTests": true,
  "platformAutomerge": true,
  "automergeStrategy": "fast-forward"
}
